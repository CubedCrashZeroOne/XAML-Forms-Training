<Window x:Class="MyVP1.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyVP1"
        mc:Ignorable="d"
        Title="Вариант 5" Height="480" Width="300">
    <StackPanel>
        <TextBlock Text="Название Книги" Margin="5 5 0 0"/>
        <TextBox x:Name="NameBox" Margin="5 5 5 0"/>
        <TextBlock Text="Автор" Margin="5 20 0 0"/>
        <TextBox x:Name="AuthorBox" Margin="5 5 5 0"/>
        <TextBlock Text="Жанр" Margin="5 20 0 0"/>
        <ComboBox x:Name="GenreBox" Margin="5 5 5 0"/>
        <TextBlock Text="Дата издания" Margin="5 20 0 0"/>
        <DatePicker x:Name="DateBox" Margin="5 5 5 0"/>
        <TextBlock x:Name="PageText" Text="Количество страниц: 1" Margin="5 20 0 0"/>
        <Slider x:Name="HeightSlider" IsSnapToTickEnabled="True" TickFrequency="1" Minimum="1" Maximum="1500" Margin="5 10 0 0" ValueChanged="HeightSlider_ValueChanged"/>
        <CheckBox x:Name="CheckRus" Content="Переведено на русский" Margin="5 20 0 0"/>
        <Button x:Name="Сonfirm" Content="Подтвердить" Margin="0 50 0 0" Height="24" Width="100" Click="Сonfirm_Click"/>
    </StackPanel>
</Window>
